<p id="notice"><%= notice %></p>

<h1>Listing Links</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link_to link.title, link %></td>
        <td><%= link.url %></td>
        <td><%= link_to 'Show', link %></td>
        <% if link.user == current_user %>
            <td><%= link_to 'Edit', edit_link_path(link) %></td>
            <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
	
	 <button>
		<%= link_to like_link_path(link),method: :put do  %>
                Upvote <%=link.get_upvotes.size %>
                <% end %>
	</button>

	<button>
		
		<%= link_to dislike_link_path(link),method: :put do  %>
                Downvote <%=link.get_downvotes.size %>
                <% end %>
	</button>


      </tr>
    <% end %>
  </tbody>
</table>

<br>

